<form class='{{cssClass}} homebrew-background' autocomplete='off'>
  <header class='sheet-header homebrew-header'>
    <h1 class="homebrew-title">
      <i class="fas fa-flask"></i> Homebrew Laboratory
    </h1>
    <p class="homebrew-subtitle">Create custom content for your CAIN game</p>
  </header>

  {{! Sheet Tab Navigation }}
  <nav class='sheet-tabs tabs homebrew-tabs' data-group='primary'>
    <a class='item' data-tab='agenda'><i class="fas fa-tasks"></i> Agenda</a>
    <a class='item' data-tab='blasphemy'><i class="fas fa-book-dead"></i> Blasphemy</a>
    <a class='item' data-tab='blasphemyPower'><i class="fas fa-hand-sparkles"></i> Powers</a>
    <a class='item' data-tab='affliction'><i class="fas fa-skull-crossbones"></i> Afflictions</a>
    <a class='item' data-tab='item'><i class="fas fa-briefcase"></i> Items</a>
    <a class='item' data-tab='sinMark'><i class="fas fa-exclamation-triangle"></i> Sin Marks</a>
    <a class='item' data-tab='history'><i class="fas fa-history"></i> History</a>
  </nav>

  {{! Sheet Body }}
  <section class='sheet-body homebrew-body'>

    {{!-- AGENDA TAB --}}
    <div class='tab homebrew-tab' data-group='primary' data-tab='agenda'>
      <div class="creation-panel">
        <h2><i class="fas fa-plus-circle"></i> Create Agenda</h2>

        <div class="form-section">
          <label for="agenda-name">Agenda Name</label>
          <input type="text" id="agenda-name" class="homebrew-input" placeholder="Enter agenda name..." value="{{agendaOptions.name}}">
        </div>

        <div class="form-section">
          <div class="section-header">
            <h3><i class="fas fa-list-ul"></i> Agenda Tasks</h3>
            <button type="button" class="btn-add homebrew-new-task"><i class="fas fa-plus"></i> Add Task</button>
          </div>
          <ul class="task-list">
          {{#each agendaOptions.tasks}}
            <li class='task-item'>
              <textarea class="homebrew-input task-input" data-task-index="{{@index}}" placeholder="Task description..." style="font-weight: {{#if this.isBold}}bold{{else}}normal{{/if}};">{{this.task}}</textarea>
              <div class="task-controls">
                <button type="button" class="btn-icon homebrew-toggle-bold" data-task-index="{{@index}}" title="Bold Text">
                  <i class="fas fa-bold {{#if this.isBold}}active{{/if}}"></i>
                </button>
                <button type="button" class="btn-icon btn-delete homebrew-remove-task" data-task-index="{{@index}}" title="Remove">
                  <i class="fas fa-trash"></i>
                </button>
              </div>
            </li>
          {{/each}}
          </ul>
        </div>

        <div class="form-section">
          <div class="section-header">
            <h3><i class="fas fa-star"></i> Agenda Abilities</h3>
            <button type="button" class="btn-add homebrew-new-ability"><i class="fas fa-plus"></i> Add Ability</button>
          </div>
          <ul class="ability-list">
          {{#each agendaOptions.abilities}}
            <li class='ability-item'>
              <input type="text" class="homebrew-input ability-name-input" data-ability-index="{{@index}}" placeholder="Ability name..." value="{{this.name}}">
              <textarea class="homebrew-input ability-description-input" data-ability-index="{{@index}}" placeholder="Ability description (use {<CAT> type modifier} for CAT formatting)...">{{this.abilityDescription}}</textarea>
              <button type="button" class="btn-icon btn-delete homebrew-remove-ability" data-ability-index="{{@index}}" title="Remove">
                <i class="fas fa-trash"></i>
              </button>
            </li>
          {{/each}}
          </ul>
        </div>

        <div class="cat-help">
          <details>
            <summary><i class="fas fa-question-circle"></i> CAT Formatting Help</summary>
            <p>Use <code>{"{<CAT> size 0}"}</code> for CAT-based values. Supports operations: <code>/2</code>, <code>*2</code>, <code>+1</code>, <code>-1</code></p>
            <p>Example: <code>{"{<CAT/2> size 0}"}</code> = half CAT level</p>
          </details>
        </div>

        <footer class="form-footer">
          <button type="button" class="btn-primary homebrew-submit-agenda"><i class="fas fa-check-circle"></i> Create Agenda</button>
        </footer>
      </div>
    </div>

    {{!-- BLASPHEMY TAB --}}
    <div class='tab homebrew-tab' data-group='primary' data-tab='blasphemy'>
      <div class="creation-panel">
        <h2><i class="fas fa-plus-circle"></i> Create Blasphemy</h2>

        <div class="form-section">
          <label for="blasphemy-name">Blasphemy Name</label>
          <input type="text" id="blasphemy-name" class="homebrew-input" placeholder="Enter blasphemy name..." value="{{blasphemyOptions.name}}">
        </div>

        <div class="form-section">
          <div class="section-header">
            <h3><i class="fas fa-hand-sparkles"></i> Powers</h3>
            <button type="button" class="btn-add homebrew-new-power"><i class="fas fa-plus"></i> Add Power</button>
          </div>
          <ul class="power-list">
          {{#each blasphemyOptions.powers}}
            <li class='power-item'>
              <div class="power-header-row">
                <input type="text" class="homebrew-input power-name-input" data-power-index="{{@index}}" placeholder="Power name..." value="{{this.name}}">
                <label class="checkbox-label">
                  <input type="checkbox" class="homebrew-power-passive-input" data-power-index="{{@index}}" {{#if this.isPassive}}checked{{/if}}>
                  <span>Passive</span>
                </label>
                <button type="button" class="btn-icon btn-delete homebrew-remove-power" data-power-index="{{@index}}" title="Remove">
                  <i class="fas fa-trash"></i>
                </button>
              </div>
              <div class="power-details">
                <div class="psyche-burst-options">
                  <label class="psyche-label">Psyche Burst:</label>
                  <label class="checkbox-label small">
                    <input type="checkbox" class="homebrew-power-psyche-cost" data-power-index="{{@index}}" {{#if this.psycheBurstCost}}checked{{/if}}>
                    <span><i class="fas fa-circle"></i> Uses</span>
                  </label>
                  <label class="checkbox-label small">
                    <input type="checkbox" class="homebrew-power-psyche-no-cost" data-power-index="{{@index}}" {{#if this.psycheBurstNoCost}}checked{{/if}}>
                    <span><i class="fas fa-times"></i> No-Cost Mode</span>
                  </label>
                  <label class="checkbox-label small">
                    <input type="checkbox" class="homebrew-power-psyche-mult" data-power-index="{{@index}}" {{#if this.psycheBurstMultCost}}checked{{/if}}>
                    <span><i class="fas fa-plus"></i> Multiple</span>
                  </label>
                </div>
                <input type="text" class="homebrew-input power-keywords-input" data-power-index="{{@index}}" placeholder="Keywords (comma-separated)..." value="{{this.keywords}}">
                <textarea class="homebrew-input power-description-input" data-power-index="{{@index}}" placeholder="Power description (use CAT formatting)...">{{this.powerDescription}}</textarea>
              </div>
            </li>
          {{/each}}
          </ul>
        </div>

        <div class="cat-help">
          <details>
            <summary><i class="fas fa-question-circle"></i> CAT Formatting Help</summary>
            <p>Use <code>{"{<CAT> size 0}"}</code> for CAT-based values. Supports operations: <code>/2</code>, <code>*2</code>, <code>+1</code>, <code>-1</code></p>
          </details>
        </div>

        <footer class="form-footer">
          <button type="button" class="btn-primary homebrew-submit-blasphemy"><i class="fas fa-check-circle"></i> Create Blasphemy</button>
        </footer>
      </div>
    </div>

    {{!-- BLASPHEMY POWER TAB --}}
    <div class='tab homebrew-tab' data-group='primary' data-tab='blasphemyPower'>
      <div class="creation-panel">
        <h2><i class="fas fa-plus-circle"></i> Create Standalone Power</h2>

        <div class="form-section">
          <label for="power-standalone-name">Power Name</label>
          <input type="text" id="power-standalone-name" class="homebrew-input" placeholder="Enter power name...">
        </div>

        <div class="form-section">
          <label class="checkbox-label">
            <input type="checkbox" id="power-standalone-passive">
            <span>Is Passive Power</span>
          </label>
        </div>

        <div class="form-section">
          <label>Psyche Burst Options</label>
          <div class="psyche-burst-options">
            <label class="checkbox-label">
              <input type="checkbox" id="power-standalone-psyche-cost">
              <span><i class="fas fa-circle"></i> Uses Psyche Burst</span>
            </label>
            <label class="checkbox-label">
              <input type="checkbox" id="power-standalone-psyche-no-cost">
              <span><i class="fas fa-times"></i> Has No-Psyche Mode</span>
            </label>
            <label class="checkbox-label">
              <input type="checkbox" id="power-standalone-psyche-mult">
              <span><i class="fas fa-plus"></i> Can Use Multiple Bursts</span>
            </label>
          </div>
        </div>

        <div class="form-section">
          <label for="power-standalone-keywords">Keywords</label>
          <input type="text" id="power-standalone-keywords" class="homebrew-input" placeholder="Keywords (comma-separated)...">
        </div>

        <div class="form-section">
          <label for="power-standalone-description">Power Description</label>
          <textarea id="power-standalone-description" class="homebrew-input" rows="6" placeholder="Power description (use CAT formatting)..."></textarea>
        </div>

        <div class="cat-help">
          <details>
            <summary><i class="fas fa-question-circle"></i> CAT Formatting Help</summary>
            <p>Use <code>{"{<CAT> size 0}"}</code> for CAT-based values</p>
          </details>
        </div>

        <footer class="form-footer">
          <button type="button" class="btn-primary homebrew-submit-standalone-power"><i class="fas fa-check-circle"></i> Create Power</button>
        </footer>
      </div>
    </div>

    {{!-- AFFLICTION TAB --}}
    <div class='tab homebrew-tab' data-group='primary' data-tab='affliction'>
      <div class="creation-panel">
        <h2><i class="fas fa-plus-circle"></i> Create Affliction</h2>

        <div class="form-section">
          <label for="affliction-name">Affliction Name</label>
          <input type="text" id="affliction-name" class="homebrew-input" placeholder="Enter affliction name...">
        </div>

        <div class="form-section">
          <label for="affliction-description">Description</label>
          <textarea id="affliction-description" class="homebrew-input" rows="6" placeholder="Affliction description (use CAT formatting)..."></textarea>
        </div>

        <div class="cat-help">
          <details>
            <summary><i class="fas fa-question-circle"></i> CAT Formatting Help</summary>
            <p>Use <code>{"{<CAT> size 0}"}</code> for CAT-based values</p>
          </details>
        </div>

        <footer class="form-footer">
          <button type="button" class="btn-primary homebrew-submit-affliction"><i class="fas fa-check-circle"></i> Create Affliction</button>
        </footer>
      </div>
    </div>

    {{!-- ITEM TAB --}}
    <div class='tab homebrew-tab' data-group='primary' data-tab='item'>
      <div class="creation-panel">
        <h2><i class="fas fa-plus-circle"></i> Create Item</h2>

        <div class="form-section">
          <label for="item-name">Item Name</label>
          <input type="text" id="item-name" class="homebrew-input" placeholder="Enter item name...">
        </div>

        <div class="form-section">
          <label for="item-description">Description</label>
          <textarea id="item-description" class="homebrew-input" rows="6" placeholder="Item description..."></textarea>
        </div>

        <div class="form-section">
          <label for="item-quantity">Quantity</label>
          <input type="number" id="item-quantity" class="homebrew-input" min="1" value="1">
        </div>

        <div class="form-section">
          <label for="item-weight">Weight</label>
          <input type="number" id="item-weight" class="homebrew-input" min="0" step="0.1" value="0">
        </div>

        <footer class="form-footer">
          <button type="button" class="btn-primary homebrew-submit-item"><i class="fas fa-check-circle"></i> Create Item</button>
        </footer>
      </div>
    </div>

    {{!-- SIN MARK TAB --}}
    <div class='tab homebrew-tab' data-group='primary' data-tab='sinMark'>
      <div class="creation-panel">
        <h2><i class="fas fa-plus-circle"></i> Create Sin Mark</h2>

        <div class="form-section">
          <label for="sinmark-name">Sin Mark Name</label>
          <input type="text" id="sinmark-name" class="homebrew-input" placeholder="Enter sin mark name...">
        </div>

        <div class="form-section">
          <label for="sinmark-description">Description</label>
          <textarea id="sinmark-description" class="homebrew-input" rows="4" placeholder="Sin mark description..."></textarea>
        </div>

        <div class="form-section">
          <div class="section-header">
            <h3><i class="fas fa-star"></i> Sin Mark Abilities</h3>
            <button type="button" class="btn-add homebrew-new-sinmark-ability"><i class="fas fa-plus"></i> Add Ability</button>
          </div>
          <ul class="sinmark-ability-list">
            <!-- Sin mark abilities will be added dynamically -->
          </ul>
        </div>

        <footer class="form-footer">
          <button type="button" class="btn-primary homebrew-submit-sinmark"><i class="fas fa-check-circle"></i> Create Sin Mark</button>
        </footer>
      </div>
    </div>

    {{!-- HISTORY TAB --}}
    <div class='tab homebrew-tab' data-group='primary' data-tab='history'>
      <div class="history-panel">
        <div class="history-header">
          <h2><i class="fas fa-history"></i> Creation History</h2>
          <div class="history-controls">
            <button type="button" class="btn-secondary homebrew-export-all"><i class="fas fa-file-export"></i> Export All</button>
            <button type="button" class="btn-secondary homebrew-import"><i class="fas fa-file-import"></i> Import</button>
            <button type="button" class="btn-secondary homebrew-clear-history"><i class="fas fa-trash-alt"></i> Clear History</button>
          </div>
        </div>

        <div class="filter-bar">
          <label>Filter by type:</label>
          <select id="history-filter" class="homebrew-input">
            <option value="all">All Types</option>
            <option value="agenda">Agendas</option>
            <option value="blasphemy">Blasphemies</option>
            <option value="blasphemyPower">Powers</option>
            <option value="affliction">Afflictions</option>
            <option value="item">Items</option>
            <option value="sinMark">Sin Marks</option>
          </select>
        </div>

        <div class="history-list" id="history-list">
          <p class="empty-state"><i class="fas fa-inbox"></i> No items created yet. Start creating homebrew content!</p>
        </div>
      </div>
    </div>

  </section>
</form>

<style>
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');

/* ==================== CSS CUSTOM PROPERTIES ==================== */
:root {
  --agenda-color: #00bcd4;
  --blasphemy-color: #7c4dff;
  --power-color: #ff9800;
  --affliction-color: #d32f2f;
  --item-color: #4caf50;
  --sinmark-color: #ffc107;
  --history-color: #607d8b;

  --bg-primary: #1a1a1a;
  --bg-secondary: #242424;
  --bg-tertiary: #2e2e2e;
  --bg-elevated: #323232;

  --text-primary: #ffffff;
  --text-secondary: #b0b0b0;
  --text-muted: #808080;

  --border-subtle: rgba(255, 255, 255, 0.1);
  --border-medium: rgba(255, 255, 255, 0.15);

  --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.3);
  --shadow-md: 0 4px 16px rgba(0, 0, 0, 0.4);
  --shadow-lg: 0 8px 32px rgba(0, 0, 0, 0.5);

  --spacing-xs: 4px;
  --spacing-sm: 8px;
  --spacing-md: 16px;
  --spacing-lg: 24px;
  --spacing-xl: 32px;
}

/* ==================== GLOBAL STYLES ==================== */
.homebrew-background {
  background: linear-gradient(135deg, #1a1a1a 0%, #0f0f0f 100%);
  color: var(--text-primary);
  padding: var(--spacing-md);
  border-radius: 12px;
  width: 100%;
  max-width: none;
  margin: auto;
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  border: 1px solid var(--border-medium);
  box-shadow: var(--shadow-lg), inset 0 1px 0 rgba(255, 255, 255, 0.05);
  position: relative;
  overflow-y: auto;
  max-height: 90vh;
}

.homebrew-background::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 200px;
  background: radial-gradient(ellipse at top, rgba(124, 77, 255, 0.1) 0%, transparent 50%);
  pointer-events: none;
  z-index: 0;
}

.homebrew-background > * {
  position: relative;
  z-index: 1;
}

/* ==================== HEADER ==================== */
.homebrew-header {
  text-align: center;
  padding: var(--spacing-lg) 0;
  background: linear-gradient(135deg, rgba(124, 77, 255, 0.15) 0%, rgba(124, 77, 255, 0.05) 100%);
  border-radius: 8px 8px 0 0;
  margin: calc(var(--spacing-md) * -1) calc(var(--spacing-md) * -1) var(--spacing-lg) calc(var(--spacing-md) * -1);
  border-bottom: 1px solid var(--border-medium);
  position: relative;
  overflow: hidden;
}

.homebrew-header::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 1px;
  background: linear-gradient(90deg, transparent 0%, var(--blasphemy-color) 50%, transparent 100%);
}

.homebrew-title {
  font-size: 1.75em;
  font-weight: 700;
  color: var(--text-primary);
  margin: 0 0 var(--spacing-sm) 0;
  font-family: 'Inter', sans-serif;
  text-transform: uppercase;
  letter-spacing: 3px;
  text-shadow: 0 2px 8px rgba(124, 77, 255, 0.3);
}

.homebrew-title i {
  color: var(--blasphemy-color);
  margin-right: var(--spacing-sm);
  font-size: 1em;
  filter: drop-shadow(0 0 8px rgba(124, 77, 255, 0.5));
  animation: flask-glow 3s ease-in-out infinite;
}

@keyframes flask-glow {
  0%, 100% { filter: drop-shadow(0 0 8px rgba(124, 77, 255, 0.5)); }
  50% { filter: drop-shadow(0 0 16px rgba(124, 77, 255, 0.8)); }
}

.homebrew-subtitle {
  color: var(--text-secondary);
  font-size: 0.9em;
  margin: 0;
  font-family: 'Inter', sans-serif;
  letter-spacing: 1px;
  font-weight: 400;
  text-align: center;
}

/* ==================== NAVIGATION TABS ==================== */
.homebrew-tabs {
  display: flex;
  justify-content: center;
  margin: 0 calc(var(--spacing-md) * -1) var(--spacing-md) calc(var(--spacing-md) * -1);
  padding: 0 var(--spacing-md);
  background: var(--bg-secondary);
  flex-wrap: wrap;
  gap: var(--spacing-xs);
  border-bottom: 1px solid var(--border-subtle);
  position: relative;
}

.homebrew-tabs .item {
  flex: 0 0 auto;
  text-align: center;
  padding: var(--spacing-sm) var(--spacing-md);
  cursor: pointer;
  color: var(--text-muted);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border-bottom: 3px solid transparent;
  font-family: 'Inter', sans-serif;
  font-size: 0.85em;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 1px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-xs);
  border-radius: 6px 6px 0 0;
  position: relative;
  overflow: hidden;
}

.homebrew-tabs .item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3px;
  background: currentColor;
  transform: scaleX(0);
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.homebrew-tabs .item i {
  font-size: 1.1em;
  transition: transform 0.3s ease;
}

.homebrew-tabs .item:hover {
  color: var(--text-primary);
  background: rgba(255, 255, 255, 0.05);
  transform: translateY(-2px);
}

.homebrew-tabs .item:hover i {
  transform: scale(1.1);
}

.homebrew-tabs .item:focus {
  outline: 2px solid var(--blasphemy-color);
  outline-offset: 2px;
}

.homebrew-tabs .item.active {
  color: var(--text-primary);
  background: var(--bg-elevated);
  box-shadow: 0 -2px 8px rgba(0, 0, 0, 0.2);
}

.homebrew-tabs .item.active::before {
  transform: scaleX(1);
}

/* Color-coded tabs */
.homebrew-tabs .item[data-tab="agenda"].active { color: var(--agenda-color); }
.homebrew-tabs .item[data-tab="blasphemy"].active { color: var(--blasphemy-color); }
.homebrew-tabs .item[data-tab="blasphemyPower"].active { color: var(--power-color); }
.homebrew-tabs .item[data-tab="affliction"].active { color: var(--affliction-color); }
.homebrew-tabs .item[data-tab="item"].active { color: var(--item-color); }
.homebrew-tabs .item[data-tab="sinMark"].active { color: var(--sinmark-color); }
.homebrew-tabs .item[data-tab="history"].active { color: var(--history-color); }

/* ==================== TAB CONTENT ==================== */
.homebrew-body {
  position: relative;
  padding: var(--spacing-md);
  background: transparent;
  min-height: 500px;
}

.homebrew-tab {
  display: none;
  animation: fadeIn 0.4s ease-out;
}

.homebrew-tab.active {
  display: block;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* ==================== PANELS ==================== */
.creation-panel, .history-panel {
  background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-tertiary) 100%);
  border: 1px solid var(--border-medium);
  border-radius: 8px;
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-md), inset 0 1px 0 rgba(255, 255, 255, 0.05);
  position: relative;
  overflow: hidden;
}

.creation-panel::before, .history-panel::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 4px;
  height: 100%;
  background: linear-gradient(180deg, var(--blasphemy-color) 0%, transparent 100%);
}

.creation-panel h2 {
  color: var(--text-primary);
  font-family: 'Inter', sans-serif;
  font-size: 1.5em;
  font-weight: 700;
  margin: 0 0 var(--spacing-lg) 0;
  padding-bottom: var(--spacing-sm);
  text-transform: uppercase;
  letter-spacing: 2px;
  position: relative;
  display: inline-block;
}

.creation-panel h2::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 60%;
  height: 3px;
  background: linear-gradient(90deg, currentColor 0%, transparent 100%);
}

.creation-panel h2 i {
  margin-right: var(--spacing-sm);
  color: var(--blasphemy-color);
  font-size: 1.1em;
}

/* ==================== FORM SECTIONS ==================== */
.form-section {
  margin-bottom: var(--spacing-md);
  padding: var(--spacing-md);
  background: rgba(255, 255, 255, 0.02);
  border: 1px solid var(--border-subtle);
  border-radius: 6px;
  transition: all 0.3s ease;
}

.form-section:hover {
