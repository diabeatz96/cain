<div class="talisman-window">
  <h1 class="talisman-header">Global Talismans</h1>
  <div id="talisman-management">
    <div id="talisman-list" class="talisman-grid">
      {{#each talismans}}
      {{#unless this.isHidden}}
      <div class="talisman" draggable="true" data-index="{{@index}}">
        <input type="text" placeholder="Name" class="talisman-name" value="{{this.name}}" data-index="{{@index}}">
        <img src="{{this.imagePath}}" alt="{{this.name}}" class="talisman-image" data-index="{{@index}}">
        <div class="talisman-controls">
          {{#if ../isGM}}
            <button class="delete-talisman" data-index="{{@index}}"><i class="fas fa-trash-alt"></i> Delete</button>
            <button class="hide-talisman" data-index="{{@index}}">
              <i class="fas fa-eye-slash"></i> Hide
            </button>
            <button class="create-tile" data-index="{{@index}}"><i class="fas fa-map-marked-alt"></i> Create Tile</button>
            <button class="delete-all-tiles" data-index="{{@index}}"><i class="fas fa-eraser"></i> Delete All Tiles</button>
            <input type="number" min="0" max="13" value="{{this.maxMarkAmount}}" class="talisman-max-mark" data-index="{{@index}}">
          {{/if}}
          <input type="range" min="0" max="{{this.maxMarkAmount}}" value="{{this.currMarkAmount}}" class="talisman-slider" data-index="{{@index}}">
          <div class="talisman-marks">{{this.currMarkAmount}} / {{this.maxMarkAmount}}</div>
        </div>
      </div>
      {{/unless}}
      {{#if ../isGM}}
      {{#if this.isHidden}}
      <div class="talisman" draggable="true" data-index="{{@index}}">
        <input type="text" placeholder="Name" class="talisman-name" value="{{this.name}}" data-index="{{@index}}">
        <img src="{{this.imagePath}}" alt="{{this.name}}" class="talisman-image" data-index="{{@index}}">
        <div class="talisman-controls">
          <button class="delete-talisman" data-index="{{@index}}"><i class="fas fa-trash-alt"></i> Delete</button>
          <button class="hide-talisman" data-index="{{@index}}">
            <i class="fas fa-eye"></i> Show
          </button>
          <button class="pin-talisman" data-index="{{@index}}"><i class="fas fa-thumbtack"></i> Pin</button>
          <input type="number" min="0" max="13" value="{{this.maxMarkAmount}}" class="talisman-max-mark" data-index="{{@index}}">
          <input type="range" min="0" max="{{this.maxMarkAmount}}" value="{{this.currMarkAmount}}" class="talisman-slider" data-index="{{@index}}">
          <div class="talisman-marks">{{this.currMarkAmount}} / {{this.maxMarkAmount}}</div>
        </div>
      </div>
      {{/if}}
      {{/if}}
      {{/each}}
    </div>
    {{#if isGM}}
      <button id="add-talisman"><i class="fas fa-plus"></i> Add Talisman</button>
    {{/if}}
  </div>
</div>

<style>
  
.talisman-window {
  background: #1a1a1a; /* Dark background */
  padding: 20px;
  border-radius: 10px;
  color: #fff; /* White text */
  box-shadow: 10px 10px 0 rgba(0, 0, 0, 0.5), -10px -10px 0 rgba(0, 0, 0, 0.5), 10px -10px 0 rgba(0, 0, 0, 0.5), -10px 10px 0 rgba(0, 0, 0, 0.5);
}

.talisman-header {
  font-family: 'Lacquer', sans-serif; /* Custom font for Jujutsu Kaisen feel */
  font-size: 2em;
  color: #ff4500; /* Bright orange-red color */
  text-shadow: 2px 2px 4px #000; /* Shadow for a dramatic effect */
  margin-bottom: 20px;
  text-align: center; /* Center the header */
  animation: demon-glow 1s infinite alternate; /* Apply the demon glow animation continuously */
}

@keyframes demon-glow {
  0% {
    text-shadow: 2px 2px 4px #000, 0 0 10px #ff4500, 0 0 20px #ff4500, 0 0 30px #ff4500, 0 0 40px #ff4500, 0 0 50px #ff4500, 0 0 60px #ff4500;
  }
  50% {
    text-shadow: 2px 2px 4px #000, 0 0 20px #ff4500, 0 0 30px #ff4500, 0 0 40px #ff4500, 0 0 50px #ff4500, 0 0 60px #ff4500, 0 0 70px #ff4500;
  }
  100% {
    text-shadow: 2px 2px 4px #000, 0 0 10px #ff4500, 0 0 20px #ff4500, 0 0 30px #ff4500, 0 0 40px #ff4500, 0 0 50px #ff4500, 0 0 60px #ff4500;
  }
}

.talisman-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
  gap: 20px;
}

.talisman {
  background: #2a2a2a; /* Slightly lighter background for contrast */
  padding: 10px;
  border-radius: 10px;
  text-align: center;
}

.talisman-name {
  width: 100%;
  margin-bottom: 10px;
  padding: 5px;
  border: none;
  border-radius: 5px;
  background: #3a3a3a;
  color: #fff;
}

.talisman-image {
  width: 400px; /* Fixed width */
  height: 220px;
  object-fit: contain; /* Ensure the image covers the area without distortion */
  border: none;
  border-radius: 10px;
  margin-bottom: 10px;
}

.talisman-controls {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.delete-talisman, .hide-talisman, .delete-all-tiles {
  background: #ff4500;
  color: #fff;
  border: none;
  padding: 5px 10px;
  border-radius: 5px;
  cursor: pointer;
  margin-bottom: 10px;
  width: 100%;
  transition: all 0.3s ease;
}

.delete-talisman:hover, .hide-talisman:hover, .delete-all-tiles:hover {
  background: #ff6347;
  transform: scale(1.05);
  box-shadow: 0 0 10px rgba(255, 69, 0, 0.5);
}

.create-tile {
  background: #00bfff;
  color: #fff;
  border: none;
  padding: 5px 10px;
  border-radius: 5px;
  cursor: pointer;
  margin-bottom: 10px;
  width: 100%;
  transition: all 0.3s ease;
}

.create-tile:hover {
  background: #1e90ff;
  transform: scale(1.05);
  box-shadow: 0 0 10px rgba(0, 191, 255, 0.5);
}

.talisman-slider, .talisman-max-mark {
  width: 100%;
  margin-bottom: 10px;
}

/* Talisman button icons */
.talisman-controls button i {
  margin-right: 5px;
}
</style>