  border-bottom: 2px solid #444;
  padding: 20px;
  box-shadow: 0 0 10px 2px #000;
  display: flex;
  align-items: center;
}

.dark-header select option {
  background-color: #1a1a1a;
  color: #e0e0e0;
}

.dark-header .profile-img-container {
