<div class="tab domains paper-texture" data-group="primary" data-tab="domains">
  {{#each selectedDomains}}
  <div id="{{@index}}" class="domain-card {{#unless this.name}}empty{{/unless}}">
    {{#if this.name}}
      <div class="domain-header">
        <h3 class="domain-title">{{this.name}}</h3>
        <button class="chat-button" onclick="sendAbilityToChat({{@index}})">
          <i class="fas fa-comment-alt"></i> Send to Chat
        </button>
      </div>
      <div class="domain-content">
        <div class="domain-description">
          <p class="ability-value" data-ability="{{@index}}">{{this.description}}</p>
        </div>
      </div>
    {{else}}
      <div>
        <span>No domain, drag one here!</span>
        <i class="fa-solid fa-circle-chevron-down"></i>
      </div>
    {{/if}}
  </div>
  {{/each}}

<script>
    function sendAbilityToChat(abilityNumber) {
        const selectElement = document.querySelector(`select.domain-select[data-ability="${abilityNumber}"]`);
        const textareaElement = document.querySelector(`textarea.domain-textarea[data-ability="${abilityNumber}"]`);
        const abilityValueElement = document.querySelector(`p.ability-value[data-ability="${abilityNumber}"]`);

        let domainName = '';
        let domainDescription = '';

        if (textareaElement) {
            // For [REDACTED] type, use textarea value
            domainName = '[REDACTED] Domain';
            domainDescription = textareaElement.value;
        } else if (selectElement && abilityValueElement) {
            // Get the domain name from the selected option's title
            const selectedOption = selectElement.options[selectElement.selectedIndex];
            const optionTitle = selectedOption ? selectedOption.text : '';

            // Get the full description from the ability-value paragraph
            const fullDescription = abilityValueElement.textContent.trim();

            // Extract domain name from the option title (before the colon)
            const colonIndex = optionTitle.indexOf(':');
            if (colonIndex !== -1) {
                domainName = optionTitle.substring(0, colonIndex).trim();
            } else {
                domainName = optionTitle || 'Domain';
            }

            domainDescription = fullDescription;
        }

        // Create a nicely formatted chat message with HTML
        const messageContent = `
            <div style="border: 2px solid #444; border-radius: 8px; padding: 12px; background: linear-gradient(135deg, #2a2a2a 0%, #1a1a1a 100%); margin: 4px 0;">
                <h3 style="margin: 0 0 8px 0; color: #91ffef; font-family: 'Pirata One', serif; font-size: 1.4em; border-bottom: 2px solid #91ffef; padding-bottom: 4px;">
                    ${domainName}
                </h3>
                <div style="color: #e0e0e0; font-family: 'Courier New', monospace; line-height: 1.6; font-size: 1em;">
                    ${domainDescription}
                </div>
            </div>
        `;

        ChatMessage.create({content: messageContent});
    }
</script>

