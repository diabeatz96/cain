<form class='{{cssClass}}, agenda-background' autocomplete='off'>
  <header class='sheet-header agenda-header'>
    <img
      class='profile-img'
      src='{{item.img}}'
      data-edit='img'
      title='{{item.name}}'
    />
    <div class='header-fields'>
      <h1 class='charname agenda-name'><input
          name='name'
          type='text'
          value='{{item.name}}'
          placeholder='Name'
        /></h1>
    </div>
  </header>

  {{! Sheet Tab Navigation }}
  <nav class='sheet-tabs tabs agenda-tabs' data-group='primary'>
    <a class='item' data-tab='task'>Task</a>
  </nav>

  {{! Sheet Body }}
  <section class='sheet-body agenda-body'>
    <div class='tab agenda-text-color' data-group='primary' data-tab='task'>
      <div class='form-group'>
        <label for='task' style='color: white;'>Task Description</label>
        <textarea
          name='system.task'
          data-dtype='String'
          rows='5'
          style='width: 100%; color: white; background-color: #333; border: 1px solid #555; border-radius: 4px; padding: 8px;'
        >{{system.task}}</textarea>
      </div>

      <div class='form-group'>
        <label style='color: white; display: flex; align-items: center; gap: 10px;'>
          <input
            type='checkbox'
            name='system.isBold'
            {{#if system.isBold}}checked{{/if}}
            data-dtype='Boolean'
            style='width: 20px; height: 20px; cursor: pointer;'
          />
          <span>Bold Task (Primary Task)</span>
        </label>
      </div>
    </div>
  </section>
</form>