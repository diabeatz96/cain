<form class='{{cssClass}} domain-card' autocomplete='off'>
  <header class='sheet-header'>
    <div class='header-fields domain-header'>
      <h1>
        <input
          name='name'
          type='text'
          value='{{item.name}}'
          placeholder='Name'
          class='domain-name-input {{system.sinSource}}' /></h1>
    </div>
  </header>
  <div class="row dashed-line">
    <section class='sheet-body affliction-body'>
      <div class='tab affliction-text-color' data-group='primary' data-tab='description'>
        <div class='form-group'>
          <label for='afflictionName'>Affliction Name</label>
          <input
            type='text'
            name='system.afflictionName'
            value='{{system.afflictionName}}'
            data-dtype='String'
          />
        </div>

        <div class='form-group'>
          <label for='afflictionDescription'>Description</label>
          <textarea
            name='system.afflictionDescription'
            data-dtype='String'
            rows='10'
          >{{system.afflictionDescription}}</textarea>
        </div>
      </div>
    </section>
  </div>
</form>